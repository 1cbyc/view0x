# Server Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/view0x_prod

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Analysis Configuration
PYTHON_API_URL=http://localhost:8000
SLITHER_TIMEOUT=300
MAX_CONTRACT_SIZE=1048576
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_ENGINE=python

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000

# External Services (Optional)
MYTHX_API_KEY=
ETHERSCAN_API_KEY=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# File Upload
MAX_FILE_SIZE=1048576
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=https://view0x.com,https://www.view0x.com

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Database Pool Configuration (Optional)
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
